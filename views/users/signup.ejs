<%- include("../partials/_header.ejs") %>
<div class="tank">
<div class="container">
    <div class="row justify-content-center w-100 ">
      <div class="col-4 shadow rounded-3 p-5">
        <h2 class="pb-3 text-center">Signup Form</h2>
        <% if (error) { %>
          <div class="text-center font-regular p-2 alert alert-danger"><%= error %></div>  
        <% } %>
        <% if (success) { %>
          <div class="text-center font-regular alert p-2 alert-success"><%= success %></div>  
        <% } %>
        <form id="loginform" method="POST" action="/signup" novalidate>
          <div class="mb-3">
            <label for="email" class="form-label font-regular-bigger">Name:</label>
            <input
              type="text"
              class="form-control"
              id="email"
              name="name"
              required
            />
            <div class="invalid-feedback">
              Please enter a valid email address.
            </div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label font-regular-bigger">Email:</label>
            <input
              type="email"
              class="form-control"
              id="password"
              name="email"
              required
            />
          <div class="mb-3">
            <label for="password" class="form-label font-regular-bigger">Mobile Number:</label>
            <input
              type="number"
              class="form-control"
              id="password"
              name="phone"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label font-regular-bigger">Password:</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            />
         </div>

            <div class="invalid-feedback font-regular-bigger">Please enter a password.</div>
          </div>
          <div class="d-grid gap-2 text-center">
            <button type="submit" class="btn btn-primary">Sign in</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/_footer') %>
